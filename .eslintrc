{
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-multi-spaces": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "key-spacing": [
      2,
      {
        "align": "colon",
        "beforeColon": true,
        "afterColon": true
      }
    ],
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "always"],
    "computed-property-spacing": [2, "always"],
    "space-in-parens": [2, "always" ],
    "no-unused-vars": [2, { "args": "after-used" }]
  },
  "env": {
    "es6": true,
    "node": true
  }
}
